# Configure devkitpro-pacman.
if [ "$UPDATE" = "no" ]; then
	case ${ACTION} in
	post)
		dkp-pacman-key --init
		dkp-pacman-key --recv F7FD5492264BB9D0
		dkp-pacman-key --lsign F7FD5492264BB9D0
		dkp-pacman -U https://downloads.devkitpro.org/devkitpro-keyring-r1.787e015-2-any.pkg.tar.xz --noconfirm
		dkp-pacman-key --populate devkitpro
	esac
fi
